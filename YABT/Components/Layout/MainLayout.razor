@inherits LayoutComponentBase

@inject IJSRuntime JS
@inject NavigationManager Navigation

<div class="page">

    <main>
        @Body
        <Toast />
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _checked = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_checked)
        {
            _checked = true;

            // Get "Id" from localStorage
            var userId = await JS.InvokeAsync<string>("localStorage.getItem", "YABTUserId");

            // current page path
            var path = Navigation.ToBaseRelativePath(Navigation.Uri).ToLower();

            // Allow /login and /register without redirect
            if (string.IsNullOrEmpty(userId) && path != "login" && path != "register")
            {
                Navigation.NavigateTo("/login");
            }
        }
    }
}